<div class="col-md-offset-4 col-md-4 col-lg-offset-4 col-lg-4" style="padding-top: 100px" >
	<form class="form-signin"  method="post" role="form" data-toggle="validator">
		<input type="hidden" name="frm_referringUrl" value="{{referringUrl}}">
		<h2 class="form-signin-heading">Wpisz dane konta</h2>
		<div class="form-group">
			<input type="text" class="form-control" id="usersName" name="usersName" placeholder="Wpisz nazwę użytkownika" required>
		</div>
		<div class="form-group">
			<input type="password" id="userPassword" name="userPassword" class="form-control" placeholder="Wpisz hasło" required>
		</div>
		<div class="form-group">
			<input type="password" data-match="#userPassword" placeholder="Wpisz ponownie hasło" class="form-control" id="frm_userPassword_confirm" name="frm_userPassword_confirm" required>
		</div>
		<button class="btn btn-lg btn-primary btn-block" type="submit">Rejestruj się</button>
	</form>
</div>
